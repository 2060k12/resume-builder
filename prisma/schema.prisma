generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid()) @db.Uuid
  fullName    String
  phoneNumber String
  email       String       @unique
  address     String
  password    String
  details     UserDetails?
}

model UserDetails {
  story           String
  academicJourney AcademicJourney[]
  experiences     Experience[]
  hardSkills      String
  softSkills      String
  userId          String            @id @unique @db.Uuid
  User            User              @relation(fields: [userId], references: [id])
}

model AcademicJourney {
  id             String      @id @default(uuid()) @db.Uuid
  schoolName     String
  location       String
  degreeName     String
  gpa            String
  fieldOfStudy   String
  graduationYear String
  userDetailsId  String      @db.Uuid
  userDetails    UserDetails @relation(fields: [userDetailsId], references: [userId])
}

model Experience {
  id               String      @id @default(uuid()) @db.Uuid
  jobTitle         String
  companyName      String
  timePeriod       String
  location         String
  responsibilities String
  userDetailsId    String      @db.Uuid
  userDetails      UserDetails @relation(fields: [userDetailsId], references: [userId])
}
